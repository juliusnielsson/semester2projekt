<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header'); -%>

<body>

  <%- include('layouts/navbar'); -%>
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Book Din Sport</h1>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for (var i = 0; i < sportsteams.length; i++) { %>
        <div class="post-preview">
          <a href="/team/<%= sportsteams[i]._id %>">
            <h2 class="post-title">
                <%= sportsteams[i].name %>
            </h2>
            <h3 class="post-subtitle">
                <%= sportsteams[i].typeOfSport %>
            </h3>
            <h3 class="post-subtitle">
              <%= sportsteams[i].age %>
            </h3>
            <h3 class="post-subtitle">
              <%= sportsteams[i].level %>
            </h3>
          </a>
          <p class="post-meta">Posted by
            <a href="#"><%= sportsteams[i].userid.username %></a>
            on <%= sportsteams[i].datePosted.toDateString() %></p>
        </div>
        <hr>
        <% } %>
      </div>
    </div>
  </div>
  <hr>
  <%- include('layouts/footer'); -%>
  <%- include('layouts/scripts'); -%>
</body>
</html>
